<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.support.design.widget.Snackbar" />
        <variable  name="threadItem"
            type="hk.edu.hkbu.comp.e5225623.fashiontap.json.Photo"/>
    </data>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:orientation="vertical" android:id="@+id/ConstraintLayout1">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/picture_frame"
                android:visibility='@{threadItem.user.avatar == "" ? View.GONE : View.VISIBLE}'
                android:onClick="@{(view) -> ((hk.edu.hkbu.comp.e5225623.fashiontap.MainActivity)view.getContext()).showThreadActivity(threadItem)}"
                app:imageUrl='@{threadItem.user.avatar == null ? "" : threadItem.user.avatar}'
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_conversion_absoluteWidth="384dp"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="28dp"/>

        <TextView app:layout_constraintStart_toStartOf="@+id/imageView"
                  android:layout_width="wrap_content"
                  android:text='@{"Like : " + threadItem.like_counter}'
                  android:textSize="24dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                  tools:layout_conversion_absoluteHeight="19dp"
                  tools:layout_conversion_absoluteWidth="1dp"
                  android:id="@+id/textView2"
                  android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>

        <TextView app:layout_constraintEnd_toEndOf="parent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text='@{threadItem.user.username}'
                  android:textSize="24dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                  tools:layout_conversion_absoluteHeight="19dp"
                  tools:layout_conversion_absoluteWidth="1dp"
                  android:id="@+id/textView3" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"/>

    </android.support.constraint.ConstraintLayout></layout>